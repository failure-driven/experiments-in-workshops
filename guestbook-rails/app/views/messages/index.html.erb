<p style="color: green"><%= notice %></p>

<% content_for :title, "Messages" %>

<h1 class="title">Messages</h1>

<div id="messages">
  <% @messages.each do |message| %>
    <%= render message %>
    <div class="mt-3">
      <%= link_to "Show this message", message, class: "button" %>
    </div>
  <% end %>
</div>

<div class="mt-3">
  <%= link_to "New message", new_message_path, class: "button is-link" %>
</div>
