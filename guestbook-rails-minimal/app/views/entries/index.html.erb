<p style="color: green"><%= notice %></p>

<h1 class="title">Entries</h1>

<div id="entries">
  <% @entries.each do |entry| %>
    <div class="card" >
      <%= render entry %>
      <div class="card-content">
        <%= link_to "Show this entry", entry, class: "button" %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "New entry", new_entry_path, class: "button is-link mt-4" %>